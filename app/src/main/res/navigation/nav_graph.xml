<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/lettersFragment">

    <fragment
        android:id="@+id/lettersFragment"
        android:name="ir.mhd.words.letters.LettersFragment"
        android:label="LettersFragment"
        tools:layout="@layout/fragment_letters">
        <action
            android:id="@+id/action_lettersFragment_to_wordsFragment"
            app:destination="@id/wordsFragment" />
    </fragment>

    <fragment
        android:id="@+id/wordsFragment"
        android:name="ir.mhd.words.words.WordsFragment"
        android:label="WordsFragment"
        tools:layout="@layout/fragment_words">
        <argument
            android:name="letter"
            app:argType="string" />
    </fragment>
</navigation>